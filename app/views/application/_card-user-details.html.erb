<div class="mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
    <h3 class="mdl-card__title-text "><%= current_user == user ? 'Your' : "#{user.name.capitalize}'s" %> Details</h3>
  </div>
  <div class="mdl-card__supporting-text">
    <ul class="mdl-list">
      <li class="mdl-list__item mdl-list__item mdl-list__item--three-line">
        <span class="mdl-list__item-primary-content">
          <i class="material-icons mdl-list__item-icon">house</i>
          Address:
          <span class="mdl-list__item-text-body">
          <%= "#{user[:address].nil? ? 'ğŸ˜' : user[:address]}" %>
          </span>
        </span>
      </li>
      <% [:shirt_size, :pant_size, :shoe_size, :dress_size].each do |item| %>
      <li class="mdl-list__item">
        <span class="mdl-list__item-primary-content">
          <i class="material-icons mdl-list__item-icon">accessibility_new</i>
          <span class="mdl-list__item-text-body">
          <%= "#{item.to_s.gsub("_", " ").titleize}:" %>
          <%= "#{user[item] ? user[item] : 'ğŸ˜'}" %>
          </span>
        </span>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <% if current_user == @user %>
      <%= link_to "edit profile", edit_user_path(user), class: "mdl-button mdl-js-button mdl-button--colored" %>
    <% else %>
      <%= link_to "people", users_path, class: "mdl-button mdl-js-button mdl-button--colored" %>
    <% end %>
  </div>
</div>
